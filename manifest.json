{
  "manifest_version": 3,
  "name": "Echo360 Speed Control",
  "version": "1.0",
  "description": "Override Echo360 playback speed restrictions for Australian university lectures",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.echo360.com/*",
    "*://*.echo360.net/*",
    "*://*.echo360.net.au/*",
    "*://*.echo360.org/*",
    "*://*.echo360.org.au/*",
    "*://*.echo360.org.uk/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.echo360.com/*",
        "*://*.echo360.net/*",
        "*://*.echo360.net.au/*",
        "*://*.echo360.org/*",
        "*://*.echo360.org.au/*",
        "*://*.echo360.org.uk/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injector.js", "injector-simple.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
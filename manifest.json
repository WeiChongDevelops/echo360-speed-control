{
  "manifest_version": 3,
  "name": "Echo360 Speed Control - Faster Lectures",
  "version": "1.3.0",
  "description": "Override Echo360 playback speed restrictions for university lectures worldwide",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*.echo360.com/*",
    "*://*.echo360.net/*",
    "*://*.echo360.net.au/*",
    "*://*.echo360.org/*",
    "*://*.echo360.org.au/*",
    "*://*.echo360.org.uk/*",
    "*://*.echo360.ca/*",
    "*://*.echo360.edu/*",
    "*://*.echo360.edu.au/*",
    "*://*.echo360.ac.uk/*",
    "*://*.echo360.co.uk/*",
    "*://*.echo360.ac.nz/*",
    "*://*.echo360.co.nz/*",
    "*://*.echo360.eu/*",
    "*://*.echo360.de/*",
    "*://*.echo360.fr/*",
    "*://*.echo360.nl/*",
    "*://*.echo360.se/*",
    "*://*.echo360.no/*",
    "*://*.echo360.dk/*",
    "*://*.echo360.fi/*",
    "*://*.echo360.ie/*",
    "*://*.echo360.es/*",
    "*://*.echo360.it/*",
    "*://*.echo360.pt/*",
    "*://*.echo360.ch/*",
    "*://*.echo360.at/*",
    "*://*.echo360.be/*",
    "*://*.echo360.pl/*",
    "*://*.echo360.cz/*",
    "*://*.echo360.hu/*",
    "*://*.echo360.ro/*",
    "*://*.echo360.gr/*",
    "*://*.echo360.jp/*",
    "*://*.echo360.cn/*",
    "*://*.echo360.hk/*",
    "*://*.echo360.sg/*",
    "*://*.echo360.my/*",
    "*://*.echo360.in/*",
    "*://*.echo360.kr/*",
    "*://*.echo360.tw/*",
    "*://*.echo360.za/*",
    "*://*.echo360.ae/*",
    "*://*.echo360.sa/*",
    "*://*.echo360.br/*",
    "*://*.echo360.mx/*",
    "*://*.echo360.cl/*",
    "*://*.echo360.ar/*",
    "*://*.echo360.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.echo360.com/*",
        "*://*.echo360.net/*",
        "*://*.echo360.net.au/*",
        "*://*.echo360.org/*",
        "*://*.echo360.org.au/*",
        "*://*.echo360.org.uk/*",
        "*://*.echo360.ca/*",
        "*://*.echo360.edu/*",
        "*://*.echo360.edu.au/*",
        "*://*.echo360.ac.uk/*",
        "*://*.echo360.co.uk/*",
        "*://*.echo360.ac.nz/*",
        "*://*.echo360.co.nz/*",
        "*://*.echo360.eu/*",
        "*://*.echo360.de/*",
        "*://*.echo360.fr/*",
        "*://*.echo360.nl/*",
        "*://*.echo360.se/*",
        "*://*.echo360.no/*",
        "*://*.echo360.dk/*",
        "*://*.echo360.fi/*",
        "*://*.echo360.ie/*",
        "*://*.echo360.es/*",
        "*://*.echo360.it/*",
        "*://*.echo360.pt/*",
        "*://*.echo360.ch/*",
        "*://*.echo360.at/*",
        "*://*.echo360.be/*",
        "*://*.echo360.pl/*",
        "*://*.echo360.cz/*",
        "*://*.echo360.hu/*",
        "*://*.echo360.ro/*",
        "*://*.echo360.gr/*",
        "*://*.echo360.jp/*",
        "*://*.echo360.cn/*",
        "*://*.echo360.hk/*",
        "*://*.echo360.sg/*",
        "*://*.echo360.my/*",
        "*://*.echo360.in/*",
        "*://*.echo360.kr/*",
        "*://*.echo360.tw/*",
        "*://*.echo360.za/*",
        "*://*.echo360.ae/*",
        "*://*.echo360.sa/*",
        "*://*.echo360.br/*",
        "*://*.echo360.mx/*",
        "*://*.echo360.cl/*",
        "*://*.echo360.ar/*",
        "*://*.echo360.co/*"
      ],
      "js": ["src/content-scripts/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/injected/injector.js", "src/injected/injector-simple.js", "src/injected/injector-base.js", "src/lib/constants.js", "src/lib/utils.js"],
      "matches": ["<all_urls>"]
    }
  ]
}